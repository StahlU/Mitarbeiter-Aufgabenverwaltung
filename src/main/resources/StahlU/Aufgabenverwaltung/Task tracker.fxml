<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StahlU.Aufgabenverwaltung.Controller.MainController">
    <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Mitarbeiter Aufgabenverwaltung" />

        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10" VBox.vgrow="ALWAYS">
            <VBox spacing="5">
                <HBox>
                    <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Mitarbeiter:" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                  <padding>
                     <Insets right="-50.0" />
                  </padding>
                    </Label>
                    <TextField fx:id="searchMitarbeiter" maxWidth="1.7976931348623157E308" onKeyTyped="#search" promptText="Suche..." HBox.hgrow="ALWAYS" />
                </HBox>
                <ListView fx:id="mitarbeiterListView" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
               <rotationAxis>
                  <Point3D />
               </rotationAxis></ListView>
                <HBox spacing="5">
                    <TextField fx:id="neuerMitarbeiternameField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Vorname" HBox.hgrow="ALWAYS" />
               <TextField fx:id="neuerMitarbeitersurnameField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Nachname" HBox.hgrow="ALWAYS" />
                    <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" onAction="#addMitarbeiter" prefHeight="25.0" prefWidth="25.0" text="+" HBox.hgrow="ALWAYS" />
                    <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" onAction="#removeMitarbeiter" prefHeight="25.0" prefWidth="25.0" text="-" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>

            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5" HBox.hgrow="ALWAYS">
            <HBox maxWidth="1.7976931348623157E308">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                      <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Aufgaben:" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
                <ListView fx:id="aufgabenListView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                <HBox spacing="5">
                    <TextField fx:id="titleTextField" promptText="Neue Aufgabe" />
               <TextField fx:id="descriptionTextField" promptText="Beschreibung" />
                    <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" onAction="#addAufgabe" prefHeight="25.0" prefWidth="25.0" text="+" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>
        </HBox>


    </VBox>
</VBox>
